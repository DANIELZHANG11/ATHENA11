{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@athena/ui": [
        "../../packages/ui/src"
      ],
      "@athena/ui/*": [
        "../../packages/ui/src/*"
      ],
      "@athena/app": [
        "../../packages/app/src"
      ],
      "@athena/app/*": [
        "../../packages/app/src/*"
      ]
    },
    "allowJs": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
